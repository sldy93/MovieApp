@model List<Movie>

@{
    Layout = "_Layout1";
}
<h2>Movie List</h2>
<a asp-action="Add">Add New Movie</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr><th>Name</th><th>Year</th><th>Genre</th><th>Rating</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>@movie.Genre</td>
                <td>@movie.Rating</td>
                <td>
                    <a asp-action="Edit" asp-route-movieid="@movie.MovieId" class="btn btn-link text-primary">Edit</a>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="mid" value="@movie.MovieId" />
                        <button type="submit" class="btn btn-link text-primary">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>